<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:useLevel="true">
            <corners android:radius="@dimen/dimen_progress_custom_radius" />
            <gradient
                android:angle="270"
                android:centerColor="@color/colorLayoutBackground"
                android:centerY="0.75"
                android:endColor="@color/colorLayoutBackground"
                android:startColor="@color/colorLayoutBackground" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <shape android:useLevel="true">
            <corners android:radius="@dimen/dimen_progress_custom_radius" />
            <gradient
                android:angle="270"
                android:centerColor="@color/colorLayoutBackground"
                android:centerY="0.75"
                android:endColor="@color/colorLayoutBackground"
                android:startColor="@color/colorLayoutBackground" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:useLevel="true">
                <corners android:radius="@dimen/dimen_progress_custom_radius" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/colorPrimaryDark"
                    android:centerY="0.75"
                    android:endColor="@color/colorPrimaryDark"
                    android:startColor="@color/colorPrimaryDark" />
            </shape>
        </clip>
    </item>
</layer-list>