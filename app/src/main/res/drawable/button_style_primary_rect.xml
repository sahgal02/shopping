<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_button_radius_curved" />
            <solid android:color="@color/colorPrimaryDarkButton" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_button_radius_curved" />
            <solid android:color="#C0D8FF" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_button_radius_curved" />
            <solid android:color="@color/colorButtonDisable" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_button_radius_curved" />
            <stroke android:width="1dp" android:color="@color/colorPrimaryButton" />
        </shape>
    </item>
</selector>